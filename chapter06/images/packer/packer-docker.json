{
  "builders":[{
    "type": "docker",
    "image": "russmckendrick/nodejs",
    "export_path": "image.tar"
  }],
  "provisioners":[
    {
      "type": "file",
      "source": ".",
      "destination": "/srv/app"
    }, 
    {
      "type": "shell",
      "inline": [
        "cd /srv/app",
        "npm install"
      ]
    }
  ]
}